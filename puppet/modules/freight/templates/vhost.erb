<VirtualHost *:80>
  DocumentRoot         <%= @webdir %>/
  ServerName           <%= @vhost %>.theforeman.org

  <Directory />
    Options Indexes FollowSymLinks
  </Directory>

  LogLevel warn
  ServerSignature Off

  ErrorLog /var/log/httpd/<%= @vhost %>_error.log
  LogLevel warn
  CustomLog /var/log/httpd/<%= @vhost %>_access.log combined
  ServerSignature Off
</VirtualHost>
