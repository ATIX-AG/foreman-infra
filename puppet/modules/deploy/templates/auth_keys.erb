<%
  if @ip_data.nil?
    # Flat array from user
    array = @allowed_ips
  else
    # Facts hash from Foreman
    array = @ip_data.values.map{|a| a.values_at('external_ip4', 'external_ip6') }.compact.flatten
  end
-%>
<% array.each do |ip| -%>
from="<%= ip %>",command="<%= @homedir %>/bin/deploy_puppet" ssh-rsa <%= @pub_key %> <%= ip %>_deploy_puppet
<% end -%>
